<%@title = "Register"%>

<div style="padding: 1em;">
  <h1>New <%=$SITE%> Account</h1>
  
  <% form_for(:user, :url => users_path) do |f| %>
    <%unless @errors.nil?%>
      <div style="color: red; padding: 1em;" class="enable-lists">
      Errors creating your account:
      <ul>
      	<%for error in @errors%>
      	 <li><%=error%></li>
      	<%end%>
      </ul>
      </div>
    <%end%>
  
    <%=render :partial => 'form', :locals => {:f => f}%>
    
  <% end %>
</div>
