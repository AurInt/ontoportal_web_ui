<%form_for(:user , :url=>{:controller=>'login',:action=>'send_pass'}) do%>

<center>

<table class="form" style="margin:40px;" width="400px">
	<tr>
		<th>Email:</th><td class="top"><%=text_field 'user', :email%></td>
	</tr>
  <tr>
    <th>Account Name:</th><td><%=text_field 'user', :account_name%></td>
  </tr>
	<tr>
		<td colspan="2" align="right"><%=submit_tag "Send New Password"%></td>
	</tr>
</table>
</center>


<%end%>