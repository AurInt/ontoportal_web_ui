<%@title = "Resource Index"%>

<h1 class="tab_header">Search Resource Index</h1>
<p class="tab_description">
  <% intro_text = "Search biomedical resources for a term"%> 
  <%=t('home.resources.intro').nil? || t('home.resources.intro').empty? ? "#{intro_text}  #{help_icon("/help#Resource_Index_Tab")}" : t('home.resources.intro')%>
</p>

<div style="height:800px;text-align:center;">
  <% query_params = params[:conceptid].nil? ? "" : "&conceptid=#{@conceptid}&ontologyid=#{@ontologyid}&ontologyversionid=#{@ontologyversionid}" %>
  <iframe src="<%=$RESOURCE_INDEX_UI_URL%>?url=<%="http://#{$REST_DOMAIN}/"%><%=query_params%>#page:resources" width="100%" height="100%" frameborder="0">
    <p>Please upgrade your browser to support the Resource Index</p>
  </iframe>
</div>
