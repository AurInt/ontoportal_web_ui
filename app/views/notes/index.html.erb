<script type="text/javascript">
jQuery(document).ready(function() {
	jQuery('#notes_table').dataTable({
		"bJQueryUI": true,
		"sPaginationType": "full_numbers"
	});
} );
</script>

<h1>Listing notes</h1>

<table cellpadding="0" cellspacing="15" border="0" class="display" id="notes_table">
  <thead>
	  <tr>
	    <th>Subject</th>
	    <th>Author</th>
	    <th>Archived</th>
	    <th>Hasstatus</th>
	  </tr>
  </thead>

<tbody>
<% @notes.each do |note| %>
  <tr>
    <td><%=h note.title %></td>
    <td><%=h note.author %></td>
    <td><%=h note.archived %></td>
    <td><%=h note.hasStatus %></td>
  </tr>
<% end %>
</tbody>
</table>

