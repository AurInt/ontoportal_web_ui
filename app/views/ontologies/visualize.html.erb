<script type="text/javascript">
jQuery(document).ready(function(){
	
	

 loc = new String(document.location)
	if(loc.search("#t_tab")>=0){
		jQuery(".tab_container").hide();
		id = "#"+ loc.split("#")[1].replace(":","")
		jQuery(id).show();
		jQuery(".tab").removeClass("selected");
		jQuery(jQuery("a[href='"+id+"']").parents().get(0)).addClass("selected");
	}
	
	jQuery(".tab").click(function(){
		
		jQuery(".tab_container").hide();
		target = jQuery(this).children("a:first").attr("href").replace(":","") 
		jQuery(target).show();
		jQuery(".tab").removeClass("selected");
		jQuery(this).addClass("selected");
		return false;
	});
	
	
	
});
</script>

<style>
.tab_container{
	display:none;
}
</style>

	<div id="tabframe" class="yui-navset">
