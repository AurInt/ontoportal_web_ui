<table class="metadata" cellpadding="0" cellspacing="0">
	<tr>
		<td>
			<ul>
			<li><label>Project Name:</label><%=@project.name%></li>			
			<li><label>Description:</label><%=@project.description%></li>
			</ul>
			
		</td>
		<td>
			<ul>
			<li><label>Institution:</label><%=@project.institution%></li>
			<li><label>People:</label><%=@project.people%></li>
			<li><label>Home Page:</label><%=link_to @project.homepage, @project.homepage%></li>
			</ul>

		</td>
	</tr>
</table>
</fieldset>

<h3>Ontologies Used</h3>
<%for uses in @project.uses%>
	<table class="reviews" cellpadding="0" cellspacing="0">

		<tr>
			<th><%=link_to uses.ontology.displayLabel,visualize_url(:ontology => uses.ontology_id)%></th>

		</tr>
		<tr>
			<td>
				<div style="float:left;border:1px solid gray;margin:7px;padding:5px;">
				<%for rating in @reviews[uses.ontology_id].ratings%>				
					<div class="rateMe" >
						<%if rating.value.eql?(0)%>
						<span style="float:left;">Not Rated</span>
						<%else%>
					    <a <% if rating.value >= 1%>class="on"<%end%> ></a>
					    <a <% if rating.value >= 2%>class="on"<%end%> ></a>
					    <a <% if rating.value >= 3%>class="on"<%end%> ></a>
					    <a <% if rating.value >= 4%>class="on"<%end%> ></a>
					    <a <% if rating.value >= 5%>class="on"<%end%> ></a>
						<%end%>
					</div>
					<b>&nbsp;<%=rating.rating_type.name%></b>					
				<%end%>
				</div>
				<p><%=@reviews[uses.ontology_id].review%></p>
				
			</td>
		</tr>

	</table>
<%end%>