<% require 'cgi' %>

<h2 style="font-size: x-large;">Details</h2>
<div id="metadata_content">
  <div style="float: left; width: 60%; overflow: hidden; min-width: 550px">
      <table class="form" width="100%">
          <tr>
              <th>
                  Ontology Id:
              </th>
              <td class="top">
                  <%= @ontology.ontologyId %>
              </td>
          </tr>
          <% if !$PURL_ENABLED.nil? && $PURL_ENABLED && !@ontology.metadata_only? %>
            <tr>
                <th>
                    <%= $SITE%> PURL:
                </th>
                <td>
                    <%= auto_link(@ontology.purl, :all, :target => "_blank")%>
                </td>
            </tr>
          <% end %>
          <tr>
              <th>
                  Status:
              </th>
              <td>
                  <%= @ontology.versionStatus.capitalize unless @ontology.versionStatus.nil? %>
              </td>
          </tr>
          <% if @ontology.viewing_restricted? %>
          <tr>
              <th>
                  Viewing Restriction:
              </th>
              <td>
                  <%= @ontology.viewingRestriction.capitalize %>
              </td>
          </tr>
          <% end %>
          <tr>
              <th>
                  Format:
              </th>
              <td>
                  <%= @ontology.format.split("-")[0] %>
              </td>
          </tr>
          <tr>
              <th>
                  Categories:
              </th>
              <td>
                  <%for cat in @ontology.categories %><%= @categories[cat.to_s][:name] %>
                  <br/>
                  <%end %>
              </td>
          </tr>
          <tr>
              <th>
                  Groups:
              </th>
              <td>
                  <%for group_id in @ontology.groups %>
	                  <%= @groups.group_list[group_id.to_i][:name] rescue "" %>
	                  <br/>
                  <%end %>
              </td>
          </tr>
          <tr>
              <th>
                  Contact:
              </th>
              <td>
                  <%= @ontology.contactName %>, <%= @ontology.contactEmail %>
              </td>
          </tr>
          <tr>
              <th>
                  Home Page:
              </th>
              <td>
                  <a href="<%= @ontology.homepage%>" target="_blank"><%= @ontology.homepage %></a>
              </td>
          </tr>
          <tr>
              <th>
                  Publications Page:
              </th>
              <td>
                  <a href="<%= @ontology.publication%>" target="_blank"><%= @ontology.publication %></a>
              </td>
          </tr>
          <tr>
              <th>
                  Documentation Page:
              </th>
              <td>
                  <a href="<%= @ontology.documentation%>" target="_blank"><%= @ontology.documentation %></a>
              </td>
          </tr>
          <tr>
              <th>
                  Description:
              </th>
              <td>
                  <%= @ontology.description %>
              </td>
          </tr>
          <%license_information = {
            1422 => 'The MedDRA ontology is maintained and distributed by the <a href="http://www.meddramsso.com/" target="_blank">MedDRA MSSO</a>.
                This ontology is freely accessible on this site for academic and other
                non-commercial uses. Users anticipating any commercial use of MedDRA must contact the MSSO to obtain a license.',
            1699 => '<div class="enable-lists">The VIVO ontology includes terms derived from the following namespaces used under the following licenses.<ul><li>http://purl.org/ontology/bibo/  :  Creative Commons 3.0</li><li>http://purl.org/dc/elements/1.1/ :  Creative Commons Attribution 3.0 Unported License</li><li>http://purl.org/dc/terms/ :  Creative Commons Attribution 3.0 Unported License</li><li>http://purl.org/NET/c4dm/event.owl#  :  Creative Commons 1.0</li><li>http://aims.fao.org/aos/geopolitical.owl# :  The use of this ontology is governed by the FAO copyright</li><li>http://xmlns.com/foaf/0.1/ :  Creative Commons 1.0</li><li>http://www.w3.org/2004/02/skos/core# : Copyright ©2009 W3C¨ (MIT, ERCIM, Keio), All Rights Reserved. W3C liability, trademark and document use rules apply</li><li>http://www.w3.org/2008/05/skos# : Copyright ©2009 W3C¨ (MIT, ERCIM, Keio), All Rights Reserved. W3C liability, trademark and document use rules apply</li><li>http://purl.obolibrary.org/obo/ :  Creative Commons 3.0</li></ul></div>'
          }%>
          <% if license_information.keys.include?(@ontology.ontologyId.to_i) %>
            <tr>
              <th>License Information:</th>
              <td><%=license_information[@ontology.ontologyId.to_i]%></td>
            </tr>
          <% end %>
      </table>
  </div>
</div>
