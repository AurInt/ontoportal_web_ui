	<table class="versions" cellpadding="0" cellspacing="0">
		<tr>
			<th>Version Number</th>
			<th>Release Date</th>
			<th>Status</th>
			<th></th>
			<th></th>
		</tr>
		<tr>
			<td><%=@ontology.currentVersion%></td>
			<td><%=@ontology.releaseDate%></td>
			<td></td>
