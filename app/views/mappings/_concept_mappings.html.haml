%div{:style => "padding: 1%; width: 98%"}
  - if session[:user].nil?
    = link_to "Create New Mapping", "/login?redirect=/ontologies/#{@ontology.to_param}/?p=terms&t=mappings&conceptid=#{escape(@concept.id)}", :method => :get, :class => "link_button"
  - else
    %a#create_new_mapping_href.link_button{"data-method" => "element#create_mapping_container", :href => "/mappings/new/ontology_from=#{@ontology.id}&conceptid_from=#{escape(@concept.id)}", :rel => "facebox", :title => "New Mapping For #{remove_owl_notation(@concept.label_html)}"} Create New Mapping
    \&nbsp;&nbsp;&nbsp;
    - if @delete_mapping_permission
      = link_to"Delete Selected Mappings", "javascript:void(0);", :onclick => "if (confirm('Really delete mappings? This cannot be undone.')) deleteMappings()", :id => "delete_mappings", :class => "link_button"
      %span#delete_mappings_spinner{:style => "display: none;"}= loading_spinner(false, true)
      %span#delete_mappings_error{:style => "color: red; padding-left: 5px;"}
  %br/
  %br/
  #mapping_details
    = render :partial => '/mappings/mapping_table'
